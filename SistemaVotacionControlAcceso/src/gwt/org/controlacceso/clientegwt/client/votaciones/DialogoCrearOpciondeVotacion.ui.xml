<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">
	<ui:style type='org.controlacceso.clientegwt.client.votaciones.DialogoCrearOpciondeVotacion.EditorStyle'>
		.messagePanel{width: 100%; border:1pt solid #cc1606; margin-bottom:10px;}
    	.errorTextBox {border: 1px solid red; width:350px}
		.captionLabel {font-weight: bold;}
	    .messageLabel {color: #cc1606; font-size: 16px; font-weight: bold; 
			margin-top: 12px; margin-bottom: 12px; text-align: center;}
   		.mainPanel {padding: 15px; }
		.boton { margin: 2px; cursor:pointer;}
		.buttonPanel { float: right; margin-top: 15px;}
		.texto{}
		.textoChrome {margin-bottom: 15px;}
		.formDataPanel{margin-top: 15px;}
		.panelContenido{}
		.uploadImageLabel {}
		.uploadTextBox {}
 	    .contenidoTextBox {border: 1px solid #02227a; width:350px}
	</ui:style>
	<ui:image field='aceptar' src="../BotonAceptar.png"/>
	<ui:image field='cerrar' src="../BotonCancelar.png"/>	
	<ui:with field='constantes' type='org.controlacceso.clientegwt.client.Constantes'/>	
	<g:DialogBox ui:field="dialogBox" autoHide="false" modal="true" glassEnabled="true" animationEnabled="true"
	    text="{constantes.crearOpcionCaption}">
		<g:VerticalPanel styleName="{style.mainPanel}">
       		<g:VerticalPanel ui:field="messagePanel" styleName="{style.messagePanel}">
				<g:Label ui:field="messageLabel" styleName="{style.messageLabel}"></g:Label>
			</g:VerticalPanel>
			<g:VerticalPanel>
				<g:HTML styleName="{style.texto}" HTML="{constantes.crearOpcionInfoLabel}"/>
				<g:HorizontalPanel styleName="{style.panelContenido}">
   					<g:TextBox  ui:field="contenidoTextBox" styleName="{style.contenidoTextBox}"/>
				</g:HorizontalPanel>
			</g:VerticalPanel>
             <g:FormPanel ui:field="formPanel" action="/image/upload">
                     <g:VerticalPanel ui:field="formDataPanel" styleName="{style.formDataPanel}">
                             <g:Label styleName="{style.uploadImageLabel}" text="{constantes.asociarImagenOpcionLabel}"/>
                             <g:FileUpload ui:field="fileUpload" name="contents" styleName="{style.uploadTextBox}"/>
                     </g:VerticalPanel>
             </g:FormPanel>
			<g:HorizontalPanel styleName="{style.buttonPanel}">
   				<g:HorizontalPanel styleName="{style.boton}">
	      			<g:PushButton  ui:field='aceptarButton'>
	  						<g:upFace image='{aceptar}'/>
						</g:PushButton>
				</g:HorizontalPanel>
				<g:HorizontalPanel styleName="{style.boton}">
	      			<g:PushButton ui:field='cerrarButton'>
			   			<g:upFace image='{cerrar}'/>
						</g:PushButton>
				</g:HorizontalPanel>		
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:DialogBox>
	
</ui:UiBinder> 