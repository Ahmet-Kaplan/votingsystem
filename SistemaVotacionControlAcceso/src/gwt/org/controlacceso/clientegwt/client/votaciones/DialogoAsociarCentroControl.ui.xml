<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type='org.controlacceso.clientegwt.client.votaciones.DialogoAsociarCentroControl.EditorStyle'>
		.mainPanel {padding:10px 10px 10px 10px;}
   		.urlCentroControlPanel {margin-top:10px;}
		.messagePanel{width: 100%; border:1pt solid #cc1606; margin-bottom:10px;}
    	.errorTextBox {border-color: red;}
	    .messageLabel {color: #cc1606; font-size: 16px; font-weight: bold; 
			margin-top: 12px; margin-bottom: 12px; text-align: center;}
		.boton { margin: 3px; cursor:pointer;}
		.panelInferior { width:100%; margin: 15px 10px 0px 10px ;}
		.buttonPanel { float:right; margin-right:10px;}
		.texto{}
		.textBox {border:1pt solid #3E125F; margin-top: 7px; width:360px;}
		.panelUrl {vertical-align:middle;}
		.indeterminatePanel {float:left; margin-top:6px;}
		.indeterminateLabel {font-size: 14px; margin:2px 3px 0px 0px; color:#47678e;}
	</ui:style>
	<ui:image field='asociar' src="../BotonAsociar.png"/>
	<ui:image field='cerrar' src="../BotonCancelar.png"/>
	<ui:image field='comprobarConexionImg' src="../BotonComprobarConexion.png"/>
	<ui:with field='res' type='org.controlacceso.clientegwt.client.Recursos'/>
	<ui:with field='constantes' type='org.controlacceso.clientegwt.client.Constantes'/>
	<g:DialogBox ui:field="dialogBox" autoHide="false" modal="true" 
	    glassEnabled="true" animationEnabled="true" width="600px">
		<g:caption><b>Asociar Centro de Control</b></g:caption>
		<g:VerticalPanel styleName="{style.mainPanel}">
    		<g:VerticalPanel ui:field="messagePanel" styleName="{style.messagePanel}">
				<g:Label ui:field="messageLabel" styleName="{style.messageLabel}"></g:Label>
			</g:VerticalPanel>
			<g:HTML ui:field='textoAdvertencia' styleName="{style.texto}" HTML='{constantes.mensajeAsociarCentroControlLabel}'/>
			<g:VerticalPanel ui:field="textPanel" styleName="{style.urlCentroControlPanel}">
				<g:VerticalPanel>
					<g:HTML styleName="{style.texto}"  HTML='{constantes.urlCentroControlLabel}'/>
					<g:HorizontalPanel styleName="{style.panelUrl}">
    					<g:TextBox  ui:field="urlCentroControlTextBox" styleName="{style.textBox}"/>
						<g:HorizontalPanel styleName="{style.boton}">
		      				<g:PushButton  ui:field='comprobarConexion'>
	   							<g:upFace image='{comprobarConexionImg}'/>
	 						</g:PushButton>
						</g:HorizontalPanel>
					</g:HorizontalPanel>
				</g:VerticalPanel>
			</g:VerticalPanel>
			<g:HorizontalPanel styleName="{style.panelInferior}">
			    <g:HorizontalPanel ui:field='indeterminatePanel' styleName="{style.indeterminatePanel}">
			        <g:Label ui:field='indeterminateLabel' styleName="{style.indeterminateLabel}"/>
			        <g:Image resource='{res.indeterminate}'/>
			    </g:HorizontalPanel>
	   			<g:HorizontalPanel styleName="{style.buttonPanel}">
					<g:HorizontalPanel styleName="{style.boton}">
		      			<g:PushButton  ui:field='asociarButton'>
	   						<g:upFace image='{asociar}'/>
	 					</g:PushButton>
					</g:HorizontalPanel>
					<g:HorizontalPanel styleName="{style.boton}">
		      			<g:PushButton ui:field='cerrarButton'>
				   			<g:upFace image='{cerrar}'/>
	 					</g:PushButton>
					</g:HorizontalPanel>
				</g:HorizontalPanel>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:DialogBox>
	
</ui:UiBinder> 