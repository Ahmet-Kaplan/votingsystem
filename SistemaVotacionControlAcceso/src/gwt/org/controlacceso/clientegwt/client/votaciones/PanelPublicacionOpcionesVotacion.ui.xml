<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.mainPanel {
			border-top:1pt solid #3E125F; width: 700px;
		}
		.panelLabel {font-size: 20px; font-weight:bold;   text-decoration: underline;
			position:relative; left:15px; top:4px; color:#02227a;}
		.panelContenedorOpciones {margin: 5px 0px 0px 15px;}
	</ui:style>
	<ui:with field='constantes' type='org.controlacceso.clientegwt.client.Constantes'/>	
	<g:VerticalPanel styleName="{style.mainPanel}">
	    <g:Label ui:field="panelLabel" styleName="{style.panelLabel}" text='{constantes.opcionesVotacionLabel}'/>
	    <g:VerticalPanel ui:field="panelContenedor" styleName="{style.panelContenedorOpciones}"/>
	</g:VerticalPanel>
</ui:UiBinder>