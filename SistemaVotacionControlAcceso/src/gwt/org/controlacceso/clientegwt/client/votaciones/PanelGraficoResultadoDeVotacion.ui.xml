<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:svUtil="urn:import:org.controlacceso.clientegwt.client.util"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
 	    .estadisticaLabel {margin-left: 3px; font-weight: bold; font-size: 16px; color:#02227a;}
 	    .panelContenedorGrafico {margin-top: 25px;}
 	    .valorEstadisticaLabel {margin-left: 3px; font-size: 16px; color:#02227a;}
		.detallesEstadisticas{margin-left: 40px;  cursor: pointer; cursor: hand;}
	</ui:style>
	<ui:with field='res' type='org.controlacceso.clientegwt.client.Recursos'/>
	<ui:with field='constantes' type='org.controlacceso.clientegwt.client.Constantes'/>
	<g:VerticalPanel>
   		<g:VerticalPanel ui:field="panelContenedorGrafico" styleName="{style.panelContenedorGrafico}">
			<g:HorizontalPanel ui:field="datosEstadisticas">
				<g:Label text="{constantes.numVotosOKLabel}" styleName="{style.estadisticaLabel}"/>
				<g:Label ui:field="numVotosOK" styleName="{style.valorEstadisticaLabel}"/>
				<g:Anchor styleName="{style.detallesEstadisticas}" ui:field="detallesEstadisticas"  text="{constantes.detallesRecuentoLabel}"/>
			</g:HorizontalPanel>
			<g:VerticalPanel ui:field="panelGrafico"/>
		</g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder>