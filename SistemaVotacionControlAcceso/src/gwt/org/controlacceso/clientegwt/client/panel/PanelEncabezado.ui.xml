<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:svUtil="urn:import:org.controlacceso.clientegwt.client.util"
	xmlns:panelSV='urn:import:org.controlacceso.clientegwt.client.panel'>
	<ui:style type='org.controlacceso.clientegwt.client.panel.PanelEncabezado.Style'>
		.mainPanel {width: 968px; height: 42px;}
		.subPanel {width:100%;}
		.nombreSistema{border-bottom:1pt solid #3E125F; width: 100%;}
		.subscripciones {cursor: pointer; cursor: hand; font-size: 11px; margin-left:5px;}
		.subscripcionesPanel{float: left; margin:5px 0px 0px 20px;}
		.feedImage {}
		.seleccionEstadoPanel{ margin-top:15px;}
		.textoSeleccionEstado{font-weight: bold; margin-top:5px; color:#3e125f;}
		.panelBusqueda { float: right;margin-top: 5px; width:270px;}
		.tituloAnchor {cursor: pointer; cursor: hand; font-size: 28px; font-weight:bold; with:100%; text-align:center;}
		.buscarTextBox {padding:1px 3px 1px 3px; margin-top: 5px; border:1pt solid #3E125F;}	
		.busquedaLink {
        	cursor: pointer;
        	text-decoration: none;
        	margin-top:7px;
        	margin-left:3px;
        	margin-right: 10px;
        	display: inline-block;
			color: #3E125F;
        	font-weight: bold;
        	font-size: 12px;
		}		
		.panelSubsistemas {margin: 0px 0px 0px 20px; width:140px;}
		.subsistemas {height: 100%;}
		.buttonPanel { float: right;}		
		.boton { margin: 5px; cursor:pointer;}	
		.listaEstados{margin-left:8px; float:left; border:1pt solid #3E125F; color:#3E125F;}
		.listaEstadoAbierto{margin-left:8px; float:left; border:1pt solid #6bad74;}
		.listaEstadoFinalizado{margin-left:8px; float:left; border:1pt solid #cc1606;}
		.listaEstadoPendiente{margin-left:8px; float:left; border:1pt solid #fba131;}
	</ui:style>
	<ui:image field='publicarManifiesto' src="../BotonPublicarManifiesto.png"/>
	<ui:image field='publicarReclamacion' src="../BotonPublicarReclamacion.png"/>
	<ui:image field='publicarVotacion' src="../BotonPublicarVotacion.png"/>
	<ui:with field='res' type='org.controlacceso.clientegwt.client.Recursos'/>
	<ui:with field='constantes' type='org.controlacceso.clientegwt.client.Constantes'/>
	<g:VerticalPanel styleName="{style.mainPanel}">
	   	<g:HorizontalPanel styleName="{style.nombreSistema}">
	    	<panelSV:PanelSubsistemas styleName="{style.panelSubsistemas}" ui:field='panelSubsistemas'/>
    	   	<g:cell horizontalAlignment="ALIGN_CENTER" width ="100%">
				<g:Anchor styleName="{style.tituloAnchor}" ui:field="tituloAnchor"/>
			</g:cell>
			<g:HorizontalPanel styleName="{style.panelBusqueda}">
				<g:TextBox styleName='{style.buscarTextBox}' ui:field='buscarTextBox' text="Buscar" width ="120px"/>
				<g:Anchor styleName='{style.busquedaLink}' text="{constantes.busquedaAvanzadaLabel}" ui:field='busquedaAvanzada'/>
			</g:HorizontalPanel>
		</g:HorizontalPanel>
		<g:HorizontalPanel styleName="{style.subPanel}">
			<g:HorizontalPanel ui:field='subscripcionesPanel' styleName="{style.subscripcionesPanel}">
       			<g:Image resource='{res.feedImage}' styleName="{style.feedImage}"/>
				<g:Anchor ui:field='subscripciones' styleName="{style.subscripciones}"/>
			</g:HorizontalPanel>
			<g:HorizontalPanel ui:field='seleccionEstadoPanel' styleName="{style.seleccionEstadoPanel}">
			    <g:Label styleName="{style.textoSeleccionEstado}" text="{constantes.stateSelectionLabel}"/>
    			<g:ListBox styleName="{style.listaEstados}" 
			    	ui:field="listaEstados" visibleItemCount='1'/>
			</g:HorizontalPanel>
			<g:HorizontalPanel styleName="{style.buttonPanel}">
				<g:HorizontalPanel styleName="{style.boton}">
	      			<g:PushButton ui:field='botonPublicarManifiesto'>
			   			<g:upFace image='{publicarManifiesto}'/>
						</g:PushButton>
				</g:HorizontalPanel>
				<g:HorizontalPanel styleName="{style.boton}">
	      			<g:PushButton ui:field='botonPublicarReclamacion'>
			   			<g:upFace image='{publicarReclamacion}'/>
						</g:PushButton>
				</g:HorizontalPanel>	
				<g:HorizontalPanel styleName="{style.boton}">
	      			<g:PushButton ui:field='botonPublicarVotacion'>
			   			<g:upFace image='{publicarVotacion}'/>
						</g:PushButton>
				</g:HorizontalPanel>								
			</g:HorizontalPanel>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder>