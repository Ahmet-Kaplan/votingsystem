<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">
	<ui:style>
   		.textPanel {margin: 10px; width:500px;}
		.boton { margin: 2px; cursor:pointer;}
		.buttonPanel { float: right; margin: 10px;}
		.texto{}
	</ui:style>
	<ui:image field='anyadirCampo' src="../BotonAnyadirCampoReclamacion.png"/>
	<ui:with field='constantes' type='org.controlacceso.clientegwt.client.Constantes'/>		
	<g:DecoratedPopupPanel glassEnabled="false" ui:field="popupPanel" animationEnabled="true">
		<g:VerticalPanel>
			<g:VerticalPanel styleName="{style.textPanel}">
			    <g:HTML styleName="{style.texto}" HTML='{constantes.textoPopupCampoReclamacion}'/>
			</g:VerticalPanel>
			<g:HorizontalPanel styleName="{style.buttonPanel}">
				<g:HorizontalPanel styleName="{style.boton}">
	      			<g:PushButton  ui:field='anyadirCampoReclamacionButton'>
   						<g:upFace image='{anyadirCampo}'/>
 					</g:PushButton>
				</g:HorizontalPanel>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:DecoratedPopupPanel>
</ui:UiBinder> 