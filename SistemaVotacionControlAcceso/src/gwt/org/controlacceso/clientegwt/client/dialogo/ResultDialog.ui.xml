<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type='org.controlacceso.clientegwt.client.dialogo.ResultDialog.Style'>
   		.mainPanel {padding: 15px 15px 15px 15px; }
		.messagePanel{width: 100%; margin:0px 0px 10px 10px;
			text-align: center; font-size: 16px;}
	    .messageLabel {font-size: 16px; text-align: center;}
		.boton {float: right; margin-top: 15px; margin: 2px; cursor:pointer;}
	</ui:style>
	<ui:image field='aceptar' src="../BotonAceptar.png"/>
	<ui:with field='constantes' type='org.controlacceso.clientegwt.client.Constantes'/>	
	<g:DialogBox ui:field="dialogBox" autoHide="false" modal="true" glassEnabled="true" animationEnabled="true"
	    text="{constantes.operationResultCaption}">
		<g:VerticalPanel styleName="{style.mainPanel}">
	    	<g:HorizontalPanel>
    		    <g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
            		<g:Image ui:field='resultImage'/>
         		</g:cell>
         		<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
         		    <g:VerticalPanel ui:field="messagePanel" styleName="{style.messagePanel}"/>
         		</g:cell>
	    	</g:HorizontalPanel>
			<g:HorizontalPanel styleName="{style.boton}">
      			<g:PushButton  ui:field='aceptarButton'>
					<g:upFace image='{aceptar}'/>
				</g:PushButton>
			</g:HorizontalPanel>	
		</g:VerticalPanel>
	</g:DialogBox>
</ui:UiBinder> 