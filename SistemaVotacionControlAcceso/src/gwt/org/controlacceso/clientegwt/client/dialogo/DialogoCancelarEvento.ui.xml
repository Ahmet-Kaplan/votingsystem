<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.mainPanel {padding:15px;}
   		.textPanel {margin: 10px; width:500px;}
		.boton { margin: 2px; cursor:pointer;}
		.buttonPanel { float: right; margin: 10px; margin-top: 15px;}
		.mensajeSeleccion {font-size: 15px; margin-bottom:15px;}
		.textoCheckBox{font-size: 14px;}
		.textoMensaje {font-size: 16px; font-weight: bold; 
			margin: 12px 0px 12px 0px; text-align: center;}
		.indeterminate {margin: 20px 50px 20px 50px;}
	</ui:style>
	<ui:image field='siguientePaso' src="../BotonSiguientePaso.png"/>
	<ui:image field='aceptar' src="../BotonAceptar.png"/>
	<ui:image field='cancelar' src="../BotonCancelar.png"/>
	<ui:with field='constantes' type='org.controlacceso.clientegwt.client.Constantes'/>
	<ui:with field='res' type='org.controlacceso.clientegwt.client.Recursos'/>
	<g:DialogBox ui:field="dialogBox" autoHide="false" modal="true" glassEnabled="true" animationEnabled="true">
	    <g:VerticalPanel width="100%" height="100%" styleName="{style.mainPanel}">
       	    <g:HorizontalPanel ui:field="panelBarrarProgreso" width="100%" height="100%">
		   		<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
		   		    <g:VerticalPanel width="100%" height="100%">
			    		<g:Image resource='{res.indeterminate}' styleName="{style.indeterminate}"/>
		   		    </g:VerticalPanel> 
			    </g:cell>
		    </g:HorizontalPanel>
			<g:VerticalPanel ui:field="panelTomaDatos" width="100%">
				<g:VerticalPanel ui:field="textPanel" styleName="{style.textPanel}" height="100%">
				    <g:HTML HTML="{constantes.cancelarDocumentoCheckBoxMsg}" styleName="{style.mensajeSeleccion}"/>
				    <g:CheckBox ui:field='checkBoxCancelarDocumento' styleName="{style.textoCheckBox}" 
				        HTML="{constantes.checkBoxCancelarDocumento}"/>
				    <g:Label height="15px" text=""/>
					<g:CheckBox ui:field='checkBoxAnularDocumento' styleName="{style.textoCheckBox}"  
					    HTML="{constantes.checkBoxAnularDocumento}"/>
				</g:VerticalPanel>
				<g:HorizontalPanel styleName="{style.buttonPanel}">
					<g:HorizontalPanel styleName="{style.boton}">
		      			<g:PushButton  ui:field='siguientePasoButton'>
	   						<g:upFace image='{siguientePaso}'/>
	 					</g:PushButton>
					</g:HorizontalPanel>
					<g:HorizontalPanel styleName="{style.boton}">
		      			<g:PushButton ui:field='cancelarButton'>
				   			<g:upFace image='{cancelar}'/>
							</g:PushButton>
					</g:HorizontalPanel>
				</g:HorizontalPanel>
			</g:VerticalPanel>
			<g:VerticalPanel ui:field="panelResultadoOperacion" width="100%" >
				<g:HTML ui:field='resultadoOperacionMessage' styleName="{style.textoMensaje}"/>
				<g:HorizontalPanel styleName="{style.buttonPanel}">
					<g:HorizontalPanel styleName="{style.boton}">
		      			<g:PushButton  ui:field='aceptarButton'>
	   						<g:upFace image='{aceptar}'/>
	 					</g:PushButton>
					</g:HorizontalPanel>
				</g:HorizontalPanel>
			</g:VerticalPanel>
	        
	    </g:VerticalPanel>
	</g:DialogBox>
</ui:UiBinder> 