<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b='urn:import:com.google.gwt.user.cellview.client'
    xmlns:panelSV='urn:import:org.controlacceso.clientegwt.client.panel'>
    <ui:style>.mainPanel {width: 100%;}
   		.barraNavegacion {width: 250px; margin: 0 0 5px 0px;}
		.cargandoLabel {font-weight: bold; margin-top: 20px; margin-left: 20px;font-size: 16px;}
		.emptySearchLabel{width: 100%; text-align:center; font-size:18px; margin:30px 0px 0px 0px;}
		.panelContenedorEventos {height:500px;}
   	</ui:style>
	<ui:with field='constantes' type='org.controlacceso.clientegwt.client.Constantes'/>
	<ui:with field='res' type='org.controlacceso.clientegwt.client.Recursos'/>   	
	<g:VerticalPanel styleName="{style.mainPanel}">
   		<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE" width="100%">
   		    <g:VerticalPanel ui:field="panelBarrarProgreso">
      	   		    <g:Label styleName="{style.cargandoLabel}" text="{constantes.cargandoLabel}"/>
	    		<g:Image resource='{res.indeterminate}'/>
   		    </g:VerticalPanel> 
	    </g:cell>
		<g:VerticalPanel ui:field='panelEventos' width="100%" height="100%">
         	<g:HTML ui:field='emptySearchLabel' text="{constantes.emptySearchLabel}" styleName="{style.emptySearchLabel}"/>
		    <g:FlowPanel styleName="{style.panelContenedorEventos}" ui:field='panelContenedorEventos'/>
	   	    <g:HorizontalPanel width="100%" height="100%">
		   		<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_BOTTOM">
					<panelSV:BarraNavegacion styleName="{style.barraNavegacion}" ui:field="barraNavegacion"/>
			    </g:cell>
		    </g:HorizontalPanel>	
		</g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 