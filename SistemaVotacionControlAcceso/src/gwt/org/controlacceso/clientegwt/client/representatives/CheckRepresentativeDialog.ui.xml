<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.messagePanel{width: 100%; margin:10px 0px 10px 0px;
			text-align: center; font-size: 16px;}
	    .messageLabel {font-size: 16px; font-weight: bold; 
			margin-top: 12px; margin-bottom: 12px; }
   		.mainPanel {padding: 15px; }
		.boton { margin: 2px; cursor:pointer;}
		.buttonPanel { float: right; margin: 15px 0px 0px 0px;}
		.texto{font-weight: bold;}
		.textBox {border:1pt solid #3E125F;}
		.errorMsg {color: #cc1606; font-size: 14px; font-weight: bold; margin: 
			0px 10px 10px 10px; text-align: center;}
	</ui:style>
	<ui:image field='aceptar' src="../BotonAceptar.png"/>
	<ui:image field='cerrar' src="../BotonCancelar.png"/>	
	<ui:with field='constantes' type='org.controlacceso.clientegwt.client.Constantes'/>	
	<g:DialogBox ui:field="dialogBox" autoHide="false" modal="true" glassEnabled="true" animationEnabled="true"
	    text="{constantes.checkRepresentativeCaption}">
		<g:VerticalPanel styleName="{style.mainPanel}">
       		<g:VerticalPanel ui:field="messagePanel" styleName="{style.messagePanel}">
    		    <g:Label ui:field="errorMsg" styleName="{style.errorMsg}"/>
    		    <g:HTML styleName="{style.texto}" text="{constantes.checkRepresentativeMsg}"/>
	    		<g:TextBox  ui:field="nifText" styleName="{style.textBox}"  width="300px"/>
			</g:VerticalPanel>
			<g:HorizontalPanel styleName="{style.buttonPanel}">
   				<g:HorizontalPanel styleName="{style.boton}">
	      			<g:PushButton  ui:field='aceptarButton'>
	  						<g:upFace image='{aceptar}'/>
						</g:PushButton>
				</g:HorizontalPanel>
				<g:HorizontalPanel styleName="{style.boton}">
	      			<g:PushButton ui:field='cerrarButton'>
			   			<g:upFace image='{cerrar}'/>
						</g:PushButton>
				</g:HorizontalPanel>		
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:DialogBox>
	
</ui:UiBinder> 