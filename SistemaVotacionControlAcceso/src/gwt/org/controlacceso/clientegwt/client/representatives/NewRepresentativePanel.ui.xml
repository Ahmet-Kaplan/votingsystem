<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:dp="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:svUtil="urn:import:org.controlacceso.clientegwt.client.util"
	xmlns:panelVotacionesSV='urn:import:org.controlacceso.clientegwt.client.votaciones'>
	<ui:style type='org.controlacceso.clientegwt.client.representatives.NewRepresentativePanel.EditorStyle'>
    	.mainPanel{width: 950px;}
	    .messageLabel {color: #cc1606; font-size: 16px; font-weight: bold; margin: 10px 10px 10px 10px; text-align: center;}
		.htmlMessagePanel{ margin: 0px 0px 20px 10px; background-color:#f2f2f2;
			padding:10px 10px 10px 10px;}
		.pageTitlePanel {width: 100%; border-bottom: 1px dotted; color:#02227a; margin-bottom: 20px;}
		.pageTitle {margin-left: 50px; font-size: 20px; margin-top: 8px; margin-bottom: 3px; font-weight: bold;
			color:#47678e; text-align: center;}
	    .date {margin-left: 15px; font-weight: bold; width:180px;}
 	    .textBox {margin-left: 3px; margin-top: 5px; border: 1px solid #02227a; width:300px}
		.richTextArea {border: 1px solid #02227a; width: 100%; height:350px;}
 	    .boldLabel {font-weight: bold; width: 130px;}
    	.errorTextBox {border-color: red;}
    	.editorPanel {width: 100%; height:100%; margin-top: 10px;}
		.boton { margin: 2px; cursor:pointer;}
		.buttonPanel { margin: 10px; margin-top: 5px; width:100%;}
		.buttonContainerPanelAndroid {margin-left: auto; margin-right: auto; width: 100%;}
		.submitButtonsPanel {float: right;}
		.optionsPanel {border: 1px solid #02227a; padding: 3px; margin-top: 3px; margin-bottom: 4px;}
		.optionsPanelContainer {margin-top: 7px; margin-BOTTOM: 5px; padding-right: 15px; padding-left: 15px;}
    	.labelsPanel { margin-left: 5px; margin-right: 5px;  margin-bottom: 5px; margin-top: 5px;}
    	.selectedTagsPanelContainer { padding-right: 15px; padding-left: 15px; margin-top: 3px; border: 1px solid #02227a; }
		.formDataPanel{margin: 5px 0px 20px 0px; float:left;}
		.imageMissing{border: 1px solid #cc1606; padding: 7px 12px 0px 12px;}
		.uploadImageLabel {font-weight: bold;}
		.uploadTextBox {}
	</ui:style>
	<ui:image field='aceptar' src="../BotonAceptar.png"/>
	<ui:image field='cerrar' src="../BotonCancelar.png"/>
	<ui:with field='constantes' type='org.controlacceso.clientegwt.client.Constantes'/>
	<ui:with field='res' type='org.controlacceso.clientegwt.client.Recursos'/>
	<g:VerticalPanel width="100%">
      	<g:cell horizontalAlignment="ALIGN_CENTER">
		   	<g:VerticalPanel ui:field="mainPanel">
				<g:HorizontalPanel ui:field='pageTitle' styleName="{style.pageTitlePanel}">
					<g:HTML styleName="{style.pageTitle}" 
					    HTML='{constantes.newRepresentativeLabel}'/>
				</g:HorizontalPanel>
			    <g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
		       			<g:VerticalPanel ui:field='header' styleName="{style.htmlMessagePanel}">
					    	<g:HTML HTML='{constantes.headerNewRepresentative}'/>
						</g:VerticalPanel>	
				    </g:cell>	
			    <g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE" width="100%">
			        <g:VerticalPanel ui:field="messagePanel" styleName="{res.style.messagePanel}">
						<g:Label ui:field="messageLabel" styleName="{style.messageLabel}"/>
					</g:VerticalPanel>	
			    </g:cell>
				<g:VerticalPanel ui:field='contentPanel' width="100%" height="100%">
					<g:VerticalPanel ui:field='editorPanel' styleName="{style.editorPanel}">
					    <svUtil:RichTextToolbar ui:field='richTextToolbar' width="100%"/>
					</g:VerticalPanel>
					<g:HorizontalPanel styleName="{style.buttonPanel}">
					    <!-- <g:HorizontalPanel ui:field="uploadImagePanel">
	   				    	<g:FormPanel ui:field="formPanel" action="/image/upload">
			                     <g:VerticalPanel ui:field="formDataPanel" styleName="{style.formDataPanel}">
			                             <g:Label ui:field="uploadImageLabel" styleName="{style.uploadImageLabel}" 
			                                 text="{constantes.newRepresentativeImgLabel}"/>
			                             <g:FileUpload ui:field="fileUpload" name="contents" styleName="{style.uploadTextBox}"/>
			                     </g:VerticalPanel>
	             			</g:FormPanel>
					    </g:HorizontalPanel>-->
				    	<g:HorizontalPanel ui:field='submitButtonsPanel' styleName="{style.submitButtonsPanel}">
			   				<g:HorizontalPanel styleName="{style.boton}">
				      			<g:PushButton  ui:field='aceptarButton'>
				  						<g:upFace image='{aceptar}'/>
									</g:PushButton>
							</g:HorizontalPanel>
							<g:HorizontalPanel styleName="{style.boton}">
				      			<g:PushButton ui:field='cerrarButton'>
						   			<g:upFace image='{cerrar}'/>
									</g:PushButton>
							</g:HorizontalPanel>	
				    	</g:HorizontalPanel>		
					</g:HorizontalPanel>
				    <g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
		       			<g:VerticalPanel ui:field='piePagina' styleName="{style.htmlMessagePanel}">
					    	<g:HTML HTML='{constantes.piePaginaPublicarVotacion}'/>
						</g:VerticalPanel>	
				    </g:cell>	
				</g:VerticalPanel>
			</g:VerticalPanel>
      	</g:cell> 
	</g:VerticalPanel>
</ui:UiBinder> 