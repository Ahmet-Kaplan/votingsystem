<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type='org.controlacceso.clientegwt.client.representatives.RepresentativeDetailsPanel.Style'>
		.pageTitle {margin: 20px 0px 0px 0px; font-size: 20px; font-weight: bold;
			width: 100%; border-bottom: 1px dotted; color:#02227a;}
		.bodyPanel {margin:0px 10px 0px 0px;}
		.representativeNameLabel {font-size: 20px; font-weight:bold; color:#27335e;  
			margin: 5px 5px 5px 7px;width: 100%;}
		.representationsNumber {font-size: 16px; font-weight:bold; color:#27335e;
			margin: 8px 0px 0px 15px;}
		.selectRepresentativeButton { margin: 0px 25px 0px 25px; cursor:pointer;}
		.image {width:120px;margin: 10px 0px 0px 7px;}

		.detailsPanel{ width:100%; height:100%; margin: 40px 10px 10px 10px;}
		
		.info { width:100%; height:100%; margin: 0px 10px 0px 15px;}

		.historyPanel{ width:100%; height:100%;}
		.historyBodyPanel {margin: 50px 10px 0px 15px;}
		.requestRepresentativeVotingHistoryButton {margin: 0px 10px 0px 0px;}
		.requestRepresentativeAccreditationsButton {}
	</ui:style>
	<ui:image field='selectRepresentativeButtonImg' src="SelectRepresentativeButton.png"/>
	<ui:image field='requestRepresentativeAccreditationsButtonImg' src="RequestRepresentativeAccreditationsButton.png"/>
	<ui:image field='requestRepresentativeVotingHistoryButtonImg' src="RequestRepresentativeVotingHistoryButton.png"/>
	
	<ui:with field='constantes' type='org.controlacceso.clientegwt.client.Constantes'/>
	<g:VerticalPanel width="100%">
   	   	<g:cell horizontalAlignment="ALIGN_CENTER">
	       	<g:HorizontalPanel>     
				<g:HorizontalPanel styleName="{style.selectRepresentativeButton}">
    				<g:PushButton  ui:field='selectRepresentativeButton'>
						<g:upFace image='{selectRepresentativeButtonImg}'/>
					</g:PushButton>
				</g:HorizontalPanel> 	       	    
				<g:Label ui:field='representativeNameLabel' styleName="{style.representativeNameLabel}"/>
				<g:Label ui:field='representationsNumber' styleName="{style.representationsNumber}"/>
			</g:HorizontalPanel>
   	   	</g:cell>

	    <g:HorizontalPanel  width="100%" height="100%">
	       	<g:TabLayoutPanel ui:field="tabPanel" barHeight="2" barUnit="EM"> 
			    <g:tab> 
			        <g:header>
			            <ui:text from='{constantes.profileRepresentativeCaption}'/>
			        </g:header> 
					<g:HorizontalPanel/>  
			    </g:tab> 
			    <g:tab> 
			        <g:header>
			            <ui:text from='{constantes.representativeHistoryCaption}'/>
			        </g:header> 
			        <g:HorizontalPanel/>
			    </g:tab> 
			</g:TabLayoutPanel>
	    </g:HorizontalPanel>

		<g:HorizontalPanel ui:field='detailsPanel' styleName="{style.detailsPanel}"> 
	        <g:cell horizontalAlignment="ALIGN_CENTER" width="100%" height="100%">
		   		<g:HorizontalPanel styleName="{style.bodyPanel}">
		 	        <g:Image ui:field='image' styleName="{style.image}"/>
			   		<g:HTMLPanel ui:field='info' styleName="{style.info}"/>
				</g:HorizontalPanel>
	   	    </g:cell>
        </g:HorizontalPanel> 
   		<g:HorizontalPanel ui:field='historyPanel' styleName="{style.historyPanel}">
   		     <g:cell horizontalAlignment="ALIGN_CENTER" width="100%" height="100%">
          		<g:HorizontalPanel styleName="{style.historyBodyPanel}">
					<g:HorizontalPanel styleName="{style.requestRepresentativeVotingHistoryButton}">
	    				<g:PushButton  ui:field='requestRepresentativeVotingHistoryButton'>
							<g:upFace image='{requestRepresentativeVotingHistoryButtonImg}'/>
						</g:PushButton>
					</g:HorizontalPanel>           		    
					<g:HorizontalPanel styleName="{style.requestRepresentativeAccreditationsButton}">
	    				<g:PushButton  ui:field='requestRepresentativeAccreditations'>
							<g:upFace image='{requestRepresentativeAccreditationsButtonImg}'/>
						</g:PushButton>
					</g:HorizontalPanel>	
   		    	</g:HorizontalPanel>
   		     </g:cell>
   		</g:HorizontalPanel>	
	    	
	</g:VerticalPanel>
</ui:UiBinder>

		   				