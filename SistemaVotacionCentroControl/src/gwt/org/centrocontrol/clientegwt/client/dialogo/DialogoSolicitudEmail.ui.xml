<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">
	<ui:style type='org.centrocontrol.clientegwt.client.dialogo.DialogoSolicitudEmail.EditorStyle'>
		.mainPanel {padding: 15px; }
		.messagePanel{width: 100%; border:1pt solid #cc1606; margin-bottom:10px;}
	    .messageLabel {color: #cc1606; font-size: 16px; font-weight: bold; 
			margin-top: 12px; margin-bottom: 12px; text-align: center;}    	
		.errorTextBox {border: 1px solid red; width:350px;}
		.texto{}
 	    .textBox {margin-left: 3px; margin-top: 5px; border: 1px solid #02227a; width:350px;}
		.boton { margin: 2px; cursor:pointer;}
		.buttonPanel { float: right; margin-top: 15px;}
	</ui:style>
	<ui:with field='constantes' type='org.centrocontrol.clientegwt.client.Constantes'/>	
	<ui:image field='aceptar' src="../BotonAceptar.png"/>
	<ui:image field='cerrar' src="../BotonCancelar.png"/>	
		<g:DialogBox ui:field="dialogBox" autoHide="false" modal="true" glassEnabled="true" animationEnabled="true"
	    text="{constantes.solicitudEmailCaption}">
		<g:VerticalPanel styleName="{style.mainPanel}">
       		<g:VerticalPanel ui:field="messagePanel" styleName="{style.messagePanel}">
				<g:Label ui:field="messageLabel" styleName="{style.messageLabel}"></g:Label>
			</g:VerticalPanel>
			<g:VerticalPanel>
				<g:HTML styleName="{style.texto}" HTML="{constantes.solicitudEmailLabel}"/>
				<g:HorizontalPanel>
   					<g:TextBox  ui:field="contenidoTextBox" styleName="{style.textBox}"/>
				</g:HorizontalPanel>
			</g:VerticalPanel>
			<g:HorizontalPanel styleName="{style.buttonPanel}">
   				<g:HorizontalPanel styleName="{style.boton}">
	      			<g:PushButton  ui:field='aceptarButton'>
	  						<g:upFace image='{aceptar}'/>
						</g:PushButton>
				</g:HorizontalPanel>
				<g:HorizontalPanel styleName="{style.boton}">
	      			<g:PushButton ui:field='cerrarButton'>
			   			<g:upFace image='{cerrar}'/>
						</g:PushButton>
				</g:HorizontalPanel>		
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:DialogBox>
	
</ui:UiBinder> 