<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
   		.mainPanel {padding: 15px 15px 15px 15px; width:470px;}
		.boton { margin: 2px; cursor:pointer;}
		.buttonPanel { float: right; margin: 10px; margin-top: 15px;}
		.msg{margin: 0px 0px 15px 0px;}
	</ui:style>
	<ui:image field='aceptar' src="../BotonAceptar.png"/>
	<ui:with field='constantes' type='org.centrocontrol.clientegwt.client.Constantes'/>
	<g:DialogBox ui:field="dialogBox" autoHide="false" modal="true" glassEnabled="true" 
	    animationEnabled="true" text="{constantes.cargaClienteAndroidCaption}">
		<g:VerticalPanel styleName="{style.mainPanel}">
			<g:VerticalPanel ui:field="textPanel">
			    <g:HTML ui:field='userMsg' styleName="{style.msg}"/>
			</g:VerticalPanel>
			<g:HorizontalPanel styleName="{style.buttonPanel}">
				<g:HorizontalPanel styleName="{style.boton}">
	      			<g:PushButton  ui:field='aceptarButton'>
   						<g:upFace image='{aceptar}'/>
 					</g:PushButton>
				</g:HorizontalPanel>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:DialogBox>
	
</ui:UiBinder> 