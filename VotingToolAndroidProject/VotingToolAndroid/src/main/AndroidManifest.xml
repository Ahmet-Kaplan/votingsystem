        <meta-data
            android:name="android.app.default_searchable"
            android:value=".app.Search" />

        <activity
            android:name=".activity.NavigationDrawer"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable" />

        </activity>

        <activity android:name=".activity.FragmentContainerActivity"
            android:noHistory="true" android:theme="@style/Theme.AppCompat.Light"/>

        <activity android:name=".activity.CertRequestActivity" android:noHistory="true"
            android:label="@string/app_name" android:theme="@style/Theme.AppCompat.Light"/>
        
        <activity android:name=".activity.UserCertResponseActivity" android:noHistory="true"
            android:theme="@style/Theme.AppCompat.Light"/>

        <activity android:name=".activity.EventVSStatisticsPagerActivity"
            android:label="@string/app_name" android:theme="@style/Theme.AppCompat.Light"/>

        <activity android:name=".activity.NewRepresentativeActivity" android:icon="@drawable/system_users_22"
            android:label="@string/new_representative_title" android:theme="@style/Theme.AppCompat.Light"/>

        <activity android:label="@string/app_name" android:name=".activity.EventVSPagerActivity"
            android:theme="@style/Theme.AppCompat.Light"/>

