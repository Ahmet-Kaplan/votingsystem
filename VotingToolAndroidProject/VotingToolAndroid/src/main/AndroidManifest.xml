        <!-- Search suggestions, and provides information about how to access it. -->
        
        <provider android:name="org.votingsystem.util.SearchSuggestionProvider"
                  android:authorities="org.votingsystem.util.SuggestionProvider" />

        <!-- The attribute "android:exported" must be set to "false" to restrict this content
            provider to its own app. Otherwise, all apps could access it. -->
        <provider android:name=".contentprovider.UserContentProvider"
            android:exported="false" android:authorities="votingsystem.org.representative"/>

        <provider android:name=".contentprovider.EventVSContentProvider"
            android:exported="false" android:authorities="votingsystem.org.eventvs"/>

        <provider android:name=".contentprovider.ReceiptContentProvider"
            android:exported="false" android:authorities="votingsystem.org.receipt"/>

        <!-- No intent filters are specified, so android:exported defaults to "false". The
            service is only available to this app. -->
        <service android:name=".service.SignAndSendService" android:exported="false"/>
        <service android:name=".service.RssService" android:process=":rss_service"/>
        <service android:name=".service.RepresentativeService"  android:exported="false"/>
        <service android:name=".service.UserCertRequestService"  android:exported="false"/>
        <service android:name=".service.EventVSService"  android:exported="false"/>
        <service android:name=".service.VotingAppService"  android:exported="false"/>
