<resources>
    <style name="Theme.Transparent" parent="@style/ThemeVS">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowIsFloating">true</item>-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="FrameworkRoot.Widget.Spinner" parent="android:Widget.Holo.Light.Spinner" />

    <style name="Widget.VotingSystem.HeaderBar.Spinner.Base" parent="FrameworkRoot.Widget.Spinner">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="Widget.VotingSystem.HeaderBar.Spinner" parent="Widget.VotingSystem.HeaderBar.Spinner.Base" />

    <style name="ThemeVS" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:popupMenuStyle">@style/ThemeVS.PopupMenu</item>
        <item name="android:panelBackground">@color/bkg_vs</item>
        <item name="android:actionBarWidgetTheme">@style/ThemeVS</item>
        <item name="android:actionBarStyle">@style/ActionBarVS</item>
        <item name="android:panelFullBackground">@color/bkg_vs</item>
        <item name="android:itemTextAppearance">@style/ItemVS</item>
    </style>
    <style name="ItemVS">
        <item name="android:textColor">@color/frg_vs</item>
    </style>
    <style name="ThemeVS.PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/bkg_vs</item>
    </style>

    <style name="ActionBarVS" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/bkg_vs</item>
        <item name="android:titleTextStyle">@style/ThemeVS.ActionBar.TitleTextStyle</item>
    </style>
    <style name="ThemeVS.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/frg_vs</item>
    </style>
</resources>