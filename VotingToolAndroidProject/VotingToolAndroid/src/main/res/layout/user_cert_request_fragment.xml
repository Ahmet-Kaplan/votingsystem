<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mainLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:foreground="@drawable/shape_window_dim" >
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scroll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/given_name_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="40dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/given_name_lbl"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/given_name_edit"
                    android:layout_height="wrap_content"
                    android:layout_width="300dp"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@+id/request_button"
                    android:gravity="center_vertical|center_horizontal">
                    <requestFocus />
                </EditText>

                <TextView
                    android:id="@+id/surname_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="40dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/surname_lbl"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/surname_edit"
                    android:layout_height="wrap_content"
                    android:layout_width="300dp"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@+id/request_button"
                    android:gravity="center_vertical|center_horizontal">
                </EditText>

                <TextView
                    android:id="@+id/nif_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="40dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/nif_label"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/nif_edit"
                    android:layout_height="wrap_content"
                    android:layout_width="240dp"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@+id/request_button"
                    android:gravity="center_vertical|center_horizontal">
                </EditText>

                <TextView
                    android:id="@+id/nif_password_message"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="15dip"
                    android:text="@string/user_cert_request_form_message_label"
                    android:gravity="center_vertical|center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:layout_marginTop="15dip">

                    <Button
                        android:id="@+id/cancel_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="20dip"
                        android:layout_weight="0.32"
                        android:drawableLeft="@drawable/cancel_22"
                        android:text="@string/cancel_lbl"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/request_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="30dp"
                        android:layout_weight="0.43"
                        android:drawableLeft="@drawable/accept_22"
                        android:text="@string/request_lbl"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <LinearLayout android:id="@+id/progressContainer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:gravity="center">
        <ProgressBar style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView android:layout_width="wrap_content"
            android:id="@+id/progressMessage"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/sending_data_lbl"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/event_progress_text_lbl"
            android:paddingTop="4dip"
            android:singleLine="true" />
    </LinearLayout>

</RelativeLayout>